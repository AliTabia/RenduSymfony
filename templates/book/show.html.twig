{# templates/book/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails du livre{% endblock %}

{% block body %}
<h1>Détails du livre: {{ book.title }}</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>{{ book.id }}</td>
    </tr>
    <tr>
        <th>Titre</th>
        <td>{{ book.title }}</td>
    </tr>
    <tr>
        <th>Auteur</th>
        <td>{{ book.author.username }}</td>
    </tr>
    <tr>
        <th>Catégorie</th>
        <td>{{ book.category }}</td>
    </tr>
    <tr>
        <th>Date de publication</th>
        <td>{{ book.publicationDate|date('d/m/Y') }}</td>
    </tr>
    <tr>
        <th>Publiée</th>
        <td>{{ book.isPublished ? 'Oui' : 'Non' }}</td>
    </tr>
    <tr>
        <th>Enabled</th>
        <td>{{ book.isEnabled ? 'Oui' : 'Non' }}</td>
    </tr>
</table>

<a href="{{ path('list_books') }}" class="btn btn-secondary">Retour à la liste</a>

{% endblock %}
